#!/bin/sh

#-------------------------------------------------------------------------------
# bspwm settings
#-------------------------------------------------------------------------------

# Export environment variables for monitors
./monitors_info

# Desktops
bspc monitor DP-0 -d home terminal terminal code code code web music chat misc
bspc monitor HDMI-0 -d home terminal code code misc

# Colors
bspc config normal_border_color   "#747C84"
bspc config focused_border_color  "#C795AE"
bspc config active_border_color   "#ADB3BA"
bspc config presel_feedback_color "#C795AE"

# Windows
bspc config top_padding  0
bspc config border_width 0
bspc config window_gap   5

bspc config split_ratio           0.50
bspc config borderless_monocle    true
bspc config gapless_monocle       false
bspc config single_monocle        true
bspc config focus_follows_pointer false
bspc config click_to_focus        button1
bspc config pointer_modifier      mod4

# Placement
bspc rule -a Code                    -o desktop=focused:^3
bspc rule -a jetbrains-idea          -o desktop=focused:^6
bspc rule -a Google-chrome           -o desktop=focused:^7
bspc rule -a Spotify                 -o desktop=focused:^8
bspc rule -a Slack                   -o desktop=focused:^9
bspc rule -a Gimp                    -o desktop=focused:^0 state=floating
bspc rule -a Nautilus                -o state=floating
bspc rule -a vlc                     -o state=floating
bspc rule -a feh                     -o state=floating
bspc rule -a Yad                     -o state=floating
bspc rule -a sun-awt-X11-XDialogPeer -o state=floating

#-------------------------------------------------------------------------------
# desktop environment
#-------------------------------------------------------------------------------

# Set wallpaper
~/.fehbg &

# Start disk manager tray
~/.config/udiskie/scripts/launch

# Start dunst notifications manager
~/.config/dunst/scripts/launch

# Start polybar to avoid conflicts with compton
 ~/.config/polybar/scripts/launch
